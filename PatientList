public class PatientList {

    private static class Node {
        Patient patient;
        Node next;

        Node(Patient patient) {
            this.patient = patient;
            this.next = null;
        }
    }

    private Node head;
    private int size;

    public PatientList() {
        head = null;
        size = 0;
    }

    public void addPatient(Patient p) {
        Node newNode = new Node(p);

        if (head == null) {
            head = newNode;
        } else {
            Node temp = head;
            while (temp.next != null) {
                temp = temp.next;
            }
            temp.next = newNode;
        }
        size++;
    }

    public boolean removePatient(int id) {
        if (head == null) {
            return false;
        }

        if (head.patient.id == id) {
            head = head.next;
            size--;
            return true;
        }

        Node current = head;
        while (current.next != null) {
            if (current.next.patient.id == id) {
                current.next = current.next.next;
                size--;
                return true;
            }
            current = current.next;
        }

        return false;
    }

    public Patient findPatient(int id) {
        Node temp = head;
        while (temp != null) {
            if (temp.patient.id == id) {
                return temp.patient;
            }
            temp = temp.next;
        }
        return null;
    }

    public void printList() {
        Node temp = head;
        while (temp != null) {
            System.out.println(temp.patient);
            temp = temp.next;
        }
    }

    public int size() {
        return size;
    }
}
